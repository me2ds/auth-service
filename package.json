{
  "name": "desme-audio-api",
  "version": "1.0.0",
  "description": "Collaborative audio player backend API",
  "author": "Ivan Lylin",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "build:bun": "bun build --target=bun src/main.ts --outdir=dist",
    "start": "node dist/main.js",
    "start:dev": "bunx nest start --watch",
    "start:debug": "bunx nest start --debug --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:e2e": "bun test test/e2e/**/*.test.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t desme-audio:latest .",
    "docker:build-bun": "docker build -f Dockerfile.bun -t desme-audio-bun:latest .",
    "k8s:generate": "bun run k8s/generate.ts",
    "k8s:deploy": "bun run k8s/generate.ts && kubectl apply -f k8s/dist/"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/lib-storage": "^3.490.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.3",
    "@types/pg": "^8.15.4",
    "aws-sdk-client-mock": "^4.0.0",
    "cache-manager": "^7.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.4.1",
    "google-auth-library": "^10.2.1",
    "js-yaml": "^4.1.0",
    "multer": "1.4.4",
    "pg": "^8.16.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.24",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.3",
    "@types/bun": "latest",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^22.15.31",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "bun": {
    "test": {
      "preload": ["./test/setup.ts"]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}

